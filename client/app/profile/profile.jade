div(ng-include='"components/navbar/navbar.html"')

section.profile
  .container-fluid.profile-page
    .row
      .col-md-3.profile-info
        .row
          .col-xs-4.col-sm-12
            img.img-responsive.img-circle.profileImage(gravatar-src='{{user.email}}', gravatar-size='250', class='{{user.party}}')
          hr.hidden-xs
          .col-xs-8.col-sm-12
            div.feedName
              p.feedDescription.feedName {{user.name}}
              p.feedDescription.feedPosition {{user.office}}
              p.feedDescription.feedArea {{user.area}}
          .col-xs-12
            hr
            p
              a.btn.btn-primary.btn-lg.btn-block(href='#', role='button') Follow
      .col-md-6.profile-videos
        div(ng-repeat='post in posts')
          stump-video(post='post')
      .col-md-3.profile-actions
        p action items go here

footer.footer
  .container
    p
      | Stump.io
      = ' | '
      a(href='https://twitter.com/nicksrandall') @nicksrandall
      = ' | '
      a(href='https://nickrandall.com') Issues

