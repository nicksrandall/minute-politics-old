div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-12
      h3 Profile Information

    form.form-horizontal(name='profile' ng-submit='updateProfile(profile)')
      .form-group
        label.col-sm-2.control-label(for='email',) Email
        .col-sm-4
          input.form-control(type='email', name='email', id='email', ng-model='user.email', required)
      .form-group
        label.col-sm-2.control-label(for='name') Name
        .col-sm-4
          input.form-control(type='text', name='name', id='name', ng-model='user.name', required)
      .form-group
        label.col-sm-2.control-label(for='gender') Gender
        .col-sm-4
          label.radio
            input(type='radio', name='gender', value='male', ng-model='user.gender', data-toggle='radio')
            span Male
          label.radio
            input(type='radio', name='gender', value='female', ng-model='user.gender', data-toggle='radio')
            span Female
      .form-group
        label.col-sm-2.control-label(for='location') Location
        .col-sm-4
          input.form-control(type='text', name='location', id='location', ng-model='user.location')
      .form-group
        label.col-sm-2.control-label(for='website') Website
        .col-sm-4
          input.form-control(type='text', name='website', id='website', ng-model='user.website')
      .form-group
        label.col-sm-2.control-label(for='party') Political Party
        .col-sm-4
          select.form-control(name='party', id='party', ng-model='user.party', ng-options='party for party in parties')

      div.politicalOffice(ng-show='isAdmin()')
        .form-group
          label.col-sm-2.control-label(for='office') Political Office
          .col-sm-4
            input.form-control(type='text', name='office', id='office', ng-model='user.office')
        .form-group
          label.col-sm-2.control-label(for='area') Political Office Area
          .col-sm-4
            input.form-control(type='text', name='area', id='area', ng-model='user.area')

      .form-group
        label.col-sm-2.control-label(for='gravatar') Gravatar
        .col-sm-2
          img.profile(ng-if='user.picture', ng-src='{{user.picture | userPicture}}', width='100px', height='100px')
          img.profile(ng-if='!user.picture', gravatar-src='user.email', gravatar-size='100')
        .col-sm-4
          button.btn.btn-primary(type='button', ng-click='editImage()')
            i.fa.fa-photo
            | Update Profile Picture
      .form-group
        .col-sm-offset-2.col-sm-4
          button.btn.btn-lg.btn-primary(type='submit')
            i.fa.fa-edit
            | Update Profile
  .row
    .col-sm-12
      h3 Change Password

    form.form-horizontal(name='form', ng-submit='changePassword(form)', novalidate='')
      .form-group
        label.col-sm-2.control-label Current Password
        .col-sm-4
          input.form-control(type='password', name='password', ng-model='user.oldPassword', mongoose-error='')
          p.help-block(ng-show='form.password.$error.mongoose')
            | errors.other
      .form-group
        label.col-sm-2.control-label New Password
        .col-sm-4
          input.form-control(type='password', name='newPassword', ng-model='user.newPassword', ng-minlength='3', required='')
          p.help-block(ng-show='(form.newPassword.$error.minlength || form.newPassword.$error.required) && (form.newPassword.$dirty || submitted)')
            | Password must be at least 3 characters.

      p.help-blockmessage

      .form-group
        .col-sm-offset-2.col-sm-4
          button.btn.btn-lg.btn-primary(type='submit')
            i.fa.fa-edit
            | Save changes

